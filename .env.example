# AIDO Development Environment Template
# SQLite para desarrollo local → PostgreSQL para producción

APP_NAME="[NOMBRE_PROYECTO]"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Argentina/Buenos_Aires
APP_URL=http://localhost

# Database (SQLite - Development)
DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# Cache & Sessions
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# AIDO Standard Settings
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Mail (usar Mailtrap para testing)
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@aido.local"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# Mercado Pago (Sandbox)
MERCADOPAGO_PUBLIC_KEY=TEST-xxx
MERCADOPAGO_ACCESS_TOKEN=TEST-xxx
MERCADOPAGO_SANDBOX=true

# WhatsApp (Development - opcional)
WASENDERAPI_API_KEY=test_key
WASENDERAPI_SESSION_NAME=aido-dev-session
WASENDERAPI_BASE_URL=https://api.wasenderapi.com
BARBER_PHONE=5491128454468

# Google OAuth (Development)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost/auth/google/callback
